#!/bin/sh

# GNUstep user services
gdnc --daemon &
gpbs --daemon --GSStartupNotification &

if [ ! -f ~/GNUstep/Defaults/WMWindowAttributes ]; then
	# Not configured -- generate the config
	exec WindowMaker &
	PID=$1
	sleep 3
	# TODO reduce delay here
	kill -s INT $PID
fi

xbindkeys # daemon mode
WindowMaker &
GWorkspace
